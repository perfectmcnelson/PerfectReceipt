        <% } %>
        <div class="company-name"><%= invoice.billFrom?.businessName || 'Your Business' %></div>
        <div class="company-tagline">Professional Services</div>
        <div class="company-contact">
          <%= invoice.billFrom?.address || '' %><br/>
          <%= invoice.billFrom?.email || '' %><br/>
          <%= invoice.billFrom?.phone || '' %>
        </div>
      </div>

      <div class="sidebar-middle">
        <div class="invoice-box-side">
          <div class="invoice-num-big">#<%= invoice.invoiceNumber %></div>
          <div class="invoice-status"><%= invoice.status %></div>
        </div>

        <div class="sidebar-info">
          <div class="info-label">Bill To</div>
          <div class="info-value">
            <strong><%= invoice.billTo?.clientName || '' %></strong><br/>
            <%= invoice.billTo?.address || '' %><br/>
            <%= invoice.billTo?.email || '' %><br/>
            <%= invoice.billTo?.phone || '' %>
          </div>

          <div class="info-label">Payment Terms</div>
          <div class="info-value"><%= invoice.paymentTerms || 'Net 30' %></div>
        </div>
      </div>
    </div>

    <!-- RIGHT CONTENT -->
    <div class="main-content">
      <div class="header-top">
        <div class="client-info">
          <h3>Invoice Details</h3>
        </div>
      </div>

      <div class="meta-dates">
        <div class="date-item">
          <div class="date-label">Invoice Date</div>
          <div class="date-value"><%= new Date(invoice.invoiceDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
        </div>
        <div class="date-item">
          <div class="date-label">Due Date</div>
          <div class="date-value"><%= new Date(invoice.dueDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
        </div>
      </div>

      <table>
        <thead>
          <tr>
            <th>Description</th>
            <th class="center">Qty</th>
            <th class="right">Unit Price</th>
            <th class="right">Total</th>
          </tr>
        </thead>
        <tbody>
          <% (invoice.items || []).forEach(function(item){ %>
            <tr>
              <td><%= item.name %></td>
              <td class="center"><%= item.quantity %></td>
              <td class="right"><%= currencyIcon %><%= Number(item.unitPrice || 0).toFixed(2) %></td>
              <td class="right"><%= currencyIcon %><%= Number(item.total || 0).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="totals-section">
        <div class="totals-box">
          <div class="total-row subtotal">
            <span>Subtotal</span>
            <span><%= currencyIcon %><%= Number(invoice.subTotal||0).toFixed(2) %></span>
          </div>
          <div class="total-row tax">
            <span>Tax</span>
            <span><%= currencyIcon %><%= Number(invoice.taxTotal||0).toFixed(2) %></span>
          </div>
          <div class="total-row final">
            <span>Total Due</span>
            <span><%= currencyIcon %><%= Number(invoice.total||0).toFixed(2) %></span>
          </div>
        </div>
      </div>

      <% if (invoice.notes) { %>
        <div class="notes-box">
          <div class="notes-label">Notes</div>
          <div class="notes-text"><%= invoice.notes %></div>
        </div>
      <% } %>

      <div class="footer-section">Thank you for your business</div>
    </div>
  </div>
</body>
</html>