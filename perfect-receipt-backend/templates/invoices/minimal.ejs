<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Invoice <%= invoice.invoiceNumber %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --brand: <%= (typeof brandColor !== 'undefined' && brandColor) ? brandColor : ((colors && colors.primary) ? colors.primary : '#000000') %>;
      --text: <%= (colors && colors.text) ? colors.text : '#1e293b' %>;
      --text-medium: <%= (colors && colors.textMedium) ? colors.textMedium : '#64748b' %>;
      --border: <%= (colors && colors.border) ? colors.border : '#e2e8f0' %>;
    }

    body { 
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', sans-serif;
      color: var(--text);
      background: #ffffff;
      padding: 20px;
      line-height: 1.5;
    }

    .container { 
      max-width: 750px; 
      margin: 0 auto;
      background: white;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 40px;
      padding-bottom: 20px;
      border-bottom: 1px solid var(--border);
    }

    .company-info h1 {
      font-size: 18px;
      font-weight: 600;
      color: var(--text);
      margin-bottom: 8px;
    }

    .company-info p {
      font-size: 12px;
      color: var(--text-medium);
      line-height: 1.6;
      margin: 4px 0;
    }

    .company-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 10px;
    }

    .company-header .logo {
        width: 60px;
        height: 60px;
        object-fit: contain;
    }

    .invoice-header {
      text-align: right;
    }

    .invoice-label {
      font-size: 12px;
      font-weight: 600;
      color: var(--text);
      margin-bottom: 4px;
    }

    .invoice-num {
      font-size: 24px;
      font-weight: 700;
      color: var(--brand);
    }

    .invoice-status {
      font-size: 11px;
      color: var(--text-medium);
      margin-top: 8px;
    }

    .parties {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      margin-bottom: 40px;
    }

    .party-section h3 {
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--text-medium);
      margin-bottom: 12px;
    }

    .party-section p {
      font-size: 12px;
      color: var(--text);
      line-height: 1.7;
      margin: 0;
    }

    .party-section strong {
      font-weight: 600;
    }

    .meta-dates {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      margin-bottom: 40px;
    }

    .meta-item {
      font-size: 12px;
    }

    .meta-label {
      font-size: 11px;
      text-transform: uppercase;
      color: var(--text-medium);
      letter-spacing: 0.5px;
      margin-bottom: 4px;
      font-weight: 600;
    }

    .meta-value {
      font-size: 13px;
      color: var(--text);
      font-weight: 500;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 30px 0;
      font-size: 12px;
    }

    thead {
      border-bottom: 1px solid var(--text);
    }

    thead th {
      padding: 12px 0;
      text-align: left;
      font-weight: 600;
      color: var(--text);
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    thead th.right { text-align: right; }
    thead th.center { text-align: center; }

    tbody tr {
      border-bottom: 1px solid var(--border);
    }

    tbody tr:last-child {
      border-bottom: 1px solid var(--text);
    }

    tbody td {
      padding: 12px 0;
      color: var(--text);
    }

    tbody td.right { text-align: right; }
    tbody td.center { text-align: center; }

    .totals {
      display: flex;
      justify-content: flex-end;
      margin-top: 30px;
    }

    .totals-box {
      width: 260px;
    }

    .total-row {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      font-size: 12px;
      color: var(--text);
    }

    .total-row.amount {
      font-weight: 500;
    }

    .total-row.final {
      border-top: 2px solid var(--text);
      padding-top: 12px;
      margin-top: 12px;
      font-size: 14px;
      font-weight: 700;
      color: var(--brand);
    }

    .notes {
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid var(--border);
    }

    .notes-title {
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--text-medium);
      margin-bottom: 8px;
    }

    .notes-content {
      font-size: 12px;
      color: var(--text);
      line-height: 1.6;
    }

    .footer {
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid var(--border);
      text-align: center;
      font-size: 11px;
      color: var(--text-medium);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="company-info">
        <div class="company-header">
            <% if (businessLogo) { %>
                <img src="<%= businessLogo %>" alt="Logo" class="logo" />
            <% } %>
            <h1><%= invoice.billFrom?.businessName || 'Your Business' %></h1>
        </div>
        <p><%= invoice.billFrom?.address || '' %></p>
        <p><%= invoice.billFrom?.email || '' %></p>
        <p><%= invoice.billFrom?.phone || '' %></p>
      </div>
      
      <div class="invoice-header">
        <div class="invoice-label">Invoice</div>
        <div class="invoice-num">#<%= invoice.invoiceNumber %></div>
        <div class="invoice-status"><%= invoice.status %></div>
      </div>
    </div>

    <div class="parties">
      <div class="party-section">
        <h3>Bill To</h3>
        <p><strong><%= invoice.billTo?.clientName || '' %></strong></p>
        <p><%= invoice.billTo?.address || '' %></p>
        <p><%= invoice.billTo?.email || '' %></p>
        <p><%= invoice.billTo?.phone || '' %></p>
      </div>
      
      <div class="party-section">
        <h3>Payment Details</h3>
        <div class="meta-item">
          <div class="meta-label">Terms</div>
          <div class="meta-value"><%= invoice.paymentTerms || 'Net 30' %></div>
        </div>
      </div>
    </div>

    <div class="meta-dates">
      <div class="meta-item">
        <div class="meta-label">Invoice Date</div>
        <div class="meta-value"><%= new Date(invoice.invoiceDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
      </div>
      <div class="meta-item">
        <div class="meta-label">Due Date</div>
        <div class="meta-value"><%= new Date(invoice.dueDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th class="center">Qty</th>
          <th class="right">Price</th>
          <th class="right">Total</th>
        </tr>
      </thead>
      <tbody>
        <% (invoice.items || []).forEach(function(item){ %>
          <tr>
            <td><%= item.name %></td>
            <td class="center"><%= item.quantity %></td>
            <td class="right"><%= currencyIcon %><%= Number(item.unitPrice || 0).toFixed(2) %></td>
            <td class="right"><%= currencyIcon %><%= Number(item.total || 0).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="totals">
      <div class="totals-box">
        <div class="total-row amount">
          <span>Subtotal</span>
          <span><%= currencyIcon %><%= Number(invoice.subTotal||0).toFixed(2) %></span>
        </div>
        <div class="total-row amount">
          <span>Tax</span>
          <span><%= currencyIcon %><%= Number(invoice.taxTotal||0).toFixed(2) %></span>
        </div>
        <div class="total-row final">
          <span>Total Due</span>
          <span><%= currencyIcon %><%= Number(invoice.total||0).toFixed(2) %></span>
        </div>
      </div>
    </div>

    <% if (invoice.notes) { %>
      <div class="notes">
        <div class="notes-title">Notes</div>
        <div class="notes-content"><%= invoice.notes %></div>
      </div>
    <% } %>

    <div class="footer">Thank you for your business</div>
  </div>
</body>
</html>