<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Receipt <%= receipt.receiptNumber %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --brand: <%= (typeof brandColor !== 'undefined' && brandColor) ? brandColor : ((colors && colors.primary) ? colors.primary : '#1d4ed8') %>;
      --brand-dark: <%= (colors && colors.primaryDark) ? colors.primaryDark : '#1e3a8a' %>;
      --brand-darker: <%= (colors && colors.primaryDarker) ? colors.primaryDarker : '#1e40af' %>;
      --brand-light: <%= (colors && colors.primaryLight) ? colors.primaryLight : 'rgba(29,78,216,0.85)' %>;
      --brand-lighter: <%= (colors && colors.primaryLighter) ? colors.primaryLighter : '#93c5fd' %>;
      --brand-pale: <%= (colors && colors.primaryPale) ? colors.primaryPale : '#f8fafc' %>;
      --accent: <%= (colors && colors.gold) ? colors.gold : '#06b6d4' %>;
      --text: <%= (colors && colors.text) ? colors.text : '#1e293b' %>;
      --text-medium: <%= (colors && colors.textMedium) ? colors.textMedium : '#64748b' %>;
      --border: <%= (colors && colors.border) ? colors.border : '#e2e8f0' %>;
    }

    body { 
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', sans-serif;
      color: var(--text);
      background: #f5f7fa;
      padding: 20px;
      line-height: 1.5;
    }

    .container { 
      max-width: 750px; 
      margin: 0 auto;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
      overflow: hidden;
    }

    .header-bar {
      background: linear-gradient(135deg, var(--brand-darker) 0%, var(--brand) 100%);
      height: 6px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 30px;
      border-bottom: 1px solid var(--border);
    }

    .company-section h1 {
      font-size: 20px;
      font-weight: 700;
      color: var(--brand-darker);
      margin-bottom: 8px;
    }

    .company-section p {
      font-size: 11px;
      color: var(--text-medium);
      line-height: 1.6;
      margin: 3px 0;
    }

    .company-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 10px;
    }

    .company-header .logo {
        width: 60px;
        height: 60px;
        object-fit: contain;
    }

    .invoice-section {
      text-align: right;
    }

    .invoice-label {
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--text-medium);
      margin-bottom: 6px;
    }

    .invoice-num {
      font-size: 22px;
      font-weight: 700;
      color: var(--brand);
      margin-bottom: 10px;
    }

    .status-badge {
      display: inline-block;
      padding: 4px 10px;
      background: white;
      color: green;
      border: 1px solid green;
      border-radius: 16px;
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.4px;
    }

    .content {
      padding: 30px;
    }

    .grid-2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 25px;
      margin-bottom: 30px;
    }

    .info-block {
      border-radius: 6px;
      padding: 15px;
      background: var(--brand-pale);
    }

    .info-block-title {
      font-size: 10px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--brand-darker);
      margin-bottom: 10px;
    }

    .info-block-content {
      font-size: 11px;
      color: var(--text);
      line-height: 1.7;
    }

    .info-block-content strong {
      font-weight: 600;
      color: var(--text);
    }

    .meta-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      font-size: 11px;
    }

    .meta-label {
      color: var(--text-medium);
      font-weight: 500;
    }

    .meta-value {
      color: var(--text);
      font-weight: 600;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 25px 0;
      font-size: 11px;
    }

    thead {
      background: var(--brand-pale);
    }

    thead th {
      padding: 10px 8px;
      text-align: left;
      font-weight: 700;
      color: var(--brand-darker);
      font-size: 9px;
      text-transform: uppercase;
      letter-spacing: 0.4px;
    }

    thead th.right { text-align: right; }
    thead th.center { text-align: center; }

    tbody tr {
      border-bottom: 1px solid var(--border);
    }

    tbody tr:last-child {
      border-bottom: 1px solid var(--brand-dark);
    }

    tbody td {
      padding: 10px 8px;
      color: var(--text);
    }

    tbody td.right { text-align: right; font-weight: 500; }
    tbody td.center { text-align: center; color: var(--text-medium); }

    .summary {
      display: flex;
      justify-content: flex-end;
      margin-top: 20px;
    }

    .summary-box {
      width: 260px;
      background: var(--brand-pale);
      border-radius: 6px;
      padding: 15px;
      border-left: 3px solid var(--accent);
    }

    .sum-row {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      font-size: 11px;
      color: var(--text-medium);
    }

    .sum-row span:last-child {
      font-weight: 600;
      color: var(--text);
    }

    .sum-total {
      border-top: 2px solid var(--text);
      margin-top: 10px;
      padding-top: 10px;
      font-size: 13px;
      font-weight: 700;
      color: var(--brand-darker);
    }

    .amount-paid {
      background: #d1fae5;
      padding: 12px 16px;
      border-radius: 6px;
      border-left: 4px solid #10b981;
      margin-top: 15px;
      text-align: center;
    }

    .amount-paid .label {
      font-size: 9px;
      text-transform: uppercase;
      color: #065f46;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 4px;
    }

    .amount-paid .amount {
      font-size: 24px;
      font-weight: 900;
      color: #059669;
    }

    .notes-section {
      margin-top: 30px;
      padding: 15px;
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      border-radius: 6px;
      border-left: 3px solid #f59e0b;
    }

    .notes-title {
      font-size: 9px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: #92400e;
      margin-bottom: 8px;
    }

    .notes-content {
      font-size: 11px;
      color: #78350f;
      line-height: 1.6;
    }

    .footer {
      border-top: 1px solid var(--border);
      padding: 20px 30px;
      text-align: center;
      font-size: 10px;
      color: var(--text-medium);
      background: var(--brand-pale);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header-bar"></div>
    
    <div class="header">
      <div class="company-section">
        <div class="company-header">
            <% if (businessLogo) { %>
                <img src="<%= businessLogo %>" alt="Logo" class="logo" />
            <% } %>
            <h1><%= receipt.billFrom?.businessName || 'Your Business' %></h1>
        </div>
        <p><%= receipt.billFrom?.address || '' %></p>
        <p><%= receipt.billFrom?.email || '' %></p>
        <p><%= receipt.billFrom?.phone || '' %></p>
      </div>
      
      <div class="invoice-section">
        <div class="invoice-label">Receipt</div>
        <div class="invoice-num">#<%= receipt.receiptNumber %></div>
        <div class="status-badge">PAID</div>
      </div>
    </div>

    <div class="content">
      <div class="grid-2">
        <div class="info-block">
          <div class="info-block-title">Received From</div>
          <div class="info-block-content">
            <strong><%= receipt.billTo?.clientName || '' %></strong><br/>
            <%= receipt.billTo?.address || '' %><br/>
            <%= receipt.billTo?.email || '' %><br/>
            <%= receipt.billTo?.phone || '' %>
          </div>
        </div>
        
        <div class="info-block">
          <div class="info-block-title">Receipt Details</div>
          <div class="meta-row">
            <span class="meta-label">Receipt Date</span>
            <span class="meta-value"><%= new Date(receipt.receiptDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
          </div>
          <div class="meta-row">
            <span class="meta-label">Payment Date</span>
            <span class="meta-value"><%= new Date(receipt.paymentDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
          </div>
          <div class="meta-row">
            <span class="meta-label">Payment Method</span>
            <span class="meta-value"><%= receipt.paymentMethod || 'Cash' %></span>
          </div>
          <% if (receipt.transactionId) { %>
          <div class="meta-row">
            <span class="meta-label">Transaction ID</span>
            <span class="meta-value"><%= receipt.transactionId %></span>
          </div>
        <% } %>
        </div>
      </div>

      <table>
        <thead>
          <tr>
            <th>Item Description</th>
            <th class="center">Quantity</th>
            <th class="right">Unit Price</th>
            <th class="right">Total</th>
          </tr>
        </thead>
        <tbody>
          <% (receipt.items || []).forEach(function(item){ %>
            <tr>
              <td><%= item.name %></td>
              <td class="center"><%= item.quantity %></td>
              <td class="right"><%= currencyIcon %><%= Number(item.unitPrice || 0).toFixed(2) %></td>
              <td class="right"><%= currencyIcon %><%= Number(item.total || 0).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="summary">
        <div class="summary-box">
          <div class="sum-row">
            <span>Subtotal</span>
            <span><%= currencyIcon %><%= Number(receipt.subTotal||0).toFixed(2) %></span>
          </div>
          <div class="sum-row">
            <span>Tax</span>
            <span><%= currencyIcon %><%= Number(receipt.taxTotal||0).toFixed(2) %></span>
          </div>
          <div class="sum-row sum-total">
            <span>Total Due</span>
            <span><%= currencyIcon %><%= Number(receipt.total||0).toFixed(2) %></span>
          </div>
        </div>
      </div>

      <div class="amount-paid">
        <div class="label">Amount Received</div>
        <div class="amount"><%= currencyIcon %><%= Number(receipt.amountPaid||0).toFixed(2) %></div>
      </div>

      <% if (receipt.notes) { %>
        <div class="notes-section">
          <div class="notes-title">Important Notes</div>
          <div class="notes-content"><%= receipt.notes %></div>
        </div>
      <% } %>
    </div>

    <div class="footer">Thank you for your business</div>
  </div>
</body>
</html>